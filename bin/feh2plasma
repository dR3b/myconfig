#!/usr/bin/env zsh

wallpaper=$(grep -o "'.*'" $HOME/.fehbg)
wallpaperuri="file://${wallpaper:Q}"

qdbus org.kde.plasmashell /PlasmaShell org.kde.PlasmaShell.evaluateScript "var D=desktops();D.forEach(function(a,b){D[b].wallpaperPlugin='org.kde.image',D[b].currentConfigGroup=['Wallpaper','org.kde.image','General'],D[b].writeConfig('Image','$wallpaperuri')});"
