[bar/top]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 26
separator = " "
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 0
overline-size = 0
font-0 = "Overpass:pixelsize=10:antialias=true;1"
font-1 = "FontAwesome:pixelsize=10:antialias=true;1"
font-2 = Symbola:pixelsize=10;1
font-3 = MaterialIcons:size=10;1
font-4 = "DejaVu Sans:pixelsize=10;1"

modules-left = wm mpd
modules-center = title
modules-right = kbd ram cpu volume time

padding-right = 2
tray-position = right
tray-background = ${colors.background}
tray-transparent = false

[module/kbd]
type = internal/xkeyboard
format = <label-indicator>
format-spacing = 0

label-indicator = %name%
label-indicator-padding = 2
label-indicator-background = ${colors.background}

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
label-muted = 🔇 muted
label-muted-foreground = ${colors.red}

; Only applies if <ramp-volume> is used
ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊

; format-volume = <label-volume>
; label-volume =  %percentage%%
; label-volume-padding = 2
; label-volume-foreground = ${colors.yellow}
;
; label-muted =  0%
; label-muted-padding = 2
; label-muted-foreground = ${colors.red}

[module/title]
type = internal/xwindow
label = %title%
label-maxlen = 75

[module/ram]
type = internal/memory
interval = 3

label = %gb_free%
label-padding = 1
label-foreground = ${colors.blue}
format-prefix = ""
format-prefix-foreground = ${colors.blue}
format-padding = 1

[module/cpu]
