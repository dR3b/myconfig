ramp-coreload-3-foreground = ${colors.cyan}
ramp-coreload-4 = ▅
ramp-coreload-4-foreground = ${colors.blue}
ramp-coreload-5 = ▆
ramp-coreload-5-foreground = ${colors.blue}
ramp-coreload-6 = ▇
ramp-coreload-6-foreground = ${colors.yellow}
ramp-coreload-7 = █
